source "https://rubygems.org"

# Remove the Jekyll version specification since github-pages will manage it
# gem "jekyll", "~> 4.2"  # Remove this line

gem "github-pages", group: :jekyll_plugins
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'jekyll-seo-tag'
  gem 'jekyll-archives'
  gem 'jekyll-gist'
end